<!DOCTYPE html>
<html>
  <head>
    <%- include('head.ejs') %>
  </head>

  <body>
    <%- include('navstyle.html') %>

    <div class="pig-control">
      <img src=" <%= currentdesign %>" width="90%" />
    </div>

    <div class="money-control"><%= currentMoney %> won</div>

    <form action="/posts/write" method="POST" class="form-style">
      <div class="mb-3">
        <input
          type="text"
          class="form-control title"
          name="title"
          placeholder="제목을 입력해주세요."
          maxlength="15"
        />
      </div>

      <div class="btn-group mb-3">
        <select class="custom-select" name="money">
          <option selected>Happy Money</option>
          <option value="5000">5000</option>
          <option value="10000">10000</option>
          <option value="15000">15000</option>
        </select>

        <div class="form-group date">
          <input
            type="date"
            name="date"
            min="2020-01-01"
            max="2030-12-31"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <textarea
          class="form-control content"
          name="content"
          rows="15"
          placeholder="내용을 입력해주세요."
        ></textarea>
      </div>

      <div class="col-md-12 text-center">
        <button
          type="submit"
          class="btn btn-light"
          onclick="return empty_check()"
        >
          Submit
        </button>
      </div>
    </form>

    <script type="text/javascript" src="/public/javascripts/posts.js"></script>
  </body>
</html>
