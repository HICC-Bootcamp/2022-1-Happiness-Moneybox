  <style type="text/css">
    body {
      background-color: #f0f8f8;
    }
    
  </style>
  <body style="text-align: center;"  >
    <style>
      .bt{
        position: absolute;
        top: 80%;
        right:3%;
      }
      .text{
        display: inline-block;
        position: absolute;
        top:30%;
        left:27%;
        right:20%;
        margin: 5px;
        padding: 20px;
        width: 45%;
      }
    </style>
    
    <h1><strong>Happy bank</strong></h1><br><br>

      <p><font size="5"><strong>Date.</strong>  <%= posts.date %></font></p>
      <p><font size="5"><strong>Title.</strong>  <%= posts.title %> <strong>Happy Money.</strong> <%= posts.money %>won</font></p>
      <br><br>
      <p><span class="text" style="border-radius: 15px 15px 15px 15px;border: 3px solid #e6e6fa ;padding: 0.5em 0.6em; color: #000000;"><font size="4"><%= posts.text %> 
      </font></div>
      </p>

      
  
      <div class="bt">
        <button type="button" 
        class="btn btn-info"  
        onclick="location.href='/posts' " >Back
        </button>
      </div>
      
      
      
